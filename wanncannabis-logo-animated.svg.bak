<?xml version="1.0" encoding="UTF-8"?>
<svg width="720" height="240" viewBox="0 0 720 240" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3.5" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
    <linearGradient id="neon" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="#39FF14"/>
      <stop offset="50%" stop-color="#00E5FF"/>
      <stop offset="100%" stop-color="#FF00FF"/>
    </linearGradient>
    <style>
      @keyframes walk {
        0%   { transform: translateX(-20px) }
        50%  { transform: translateX(20px) }
        100% { transform: translateX(-20px) }
      }
      @keyframes legL { 
        0% { transform: rotate(18deg) } 
        50% { transform: rotate(-18deg) } 
        100% { transform: rotate(18deg) } 
      }
      @keyframes legR { 
        0% { transform: rotate(-18deg) } 
        50% { transform: rotate(18deg) } 
        100% { transform: rotate(-18deg) } 
      }
      @keyframes arm {
        0% { transform: rotate(-8deg) } 
        50% { transform: rotate(8deg) } 
        100% { transform: rotate(-8deg) } 
      }
      @keyframes pulse {
        0%,100% { transform: scale(1); filter: drop-shadow(0 0 6px #00ffa6); }
        50%     { transform: scale(1.06); filter: drop-shadow(0 0 12px #00ffa6); }
      }
      @keyframes blink {
        0%, 6%, 100% { transform: scaleY(1); }
        3% { transform: scaleY(0.1); }
      }
      @keyframes dash {
        to { stroke-dashoffset: -600; }
      }
      .outline {
        stroke: url(#neon);
        stroke-width: 4;
        fill: none;
        stroke-linecap: round;
        stroke-linejoin: round;
        stroke-dasharray: 14 10;
        animation: dash 4.5s linear infinite;
        filter: url(#glow);
      }
      .label {
        font-family: 'Segoe UI', Tahoma, sans-serif;
        font-weight: 800;
        font-size: 48px;
        fill: url(#neon);
        filter: url(#glow);
        letter-spacing: 1.5px;
      }
      .sub {
        font-family: 'Segoe UI', Tahoma, sans-serif;
        font-size: 16px;
        fill: #c8fff7;
        opacity: 0.85;
      }
    </style>
  </defs>

  <!-- Background frame for preview; remove if embedding on dark site -->
  <rect x="0" y="0" width="720" height="240" fill="#0A0A12"/>

  <!-- Pulsing medical cannabis leaf -->
  <g transform="translate(80,120) scale(1.1)" style="transform-origin:80px 120px">
    <g id="leaf" transform="translate(-40,-40)" style="animation:pulse 2.4s ease-in-out infinite">
      <!-- central leaf -->
      <path d="M80 12 C85 40, 85 74, 80 104 C75 74, 75 40, 80 12 Z" fill="#16FF9A"/>
      <!-- side leaves -->
      <path d="M80 44 C68 48, 54 58, 40 72 C58 68, 72 64, 80 62 Z" fill="#16FF9A"/>
      <path d="M80 44 C92 48, 106 58, 120 72 C102 68, 88 64, 80 62 Z" fill="#16FF9A"/>
      <path d="M78 64 C62 74, 48 88, 36 110 C54 98, 68 86, 80 76 Z" fill="#16FF9A"/>
      <path d="M82 64 C98 74, 112 88, 124 110 C106 98, 92 86, 80 76 Z" fill="#16FF9A"/>
      <!-- stem -->
      <rect x="78" y="102" width="4" height="34" rx="2" fill="#16FF9A"/>
    </g>
    <!-- glowing outline ring -->
    <circle cx="40" cy="40" r="56" class="outline"/>
  </g>

  <!-- Brand text -->
  <text x="170" y="110" class="label">WannCannaBis</text>
  <text x="172" y="136" class="sub">Medizinisches Cannabis · Infos · Produkte</text>

  <!-- Doctor character walking left-to-right loop -->
  <g transform="translate(170,150)">
    <g transform="translate(420,0)">
      <g id="doc" style="animation: walk 2.8s ease-in-out infinite; transform-origin: 0px 0px;">
        <!-- body -->
        <g transform="translate(0,0)">
          <!-- coat -->
          <path d="M-30 -10 L-10 -10 L0 24 L-40 24 Z" fill="#E6F7FF" filter="url(#glow)"/>
          <!-- stethoscope -->
          <path d="M-20 -10 C-28 0,-26 10,-22 10" stroke="#00E5FF" stroke-width="3" fill="none"/>
          <circle cx="-22" cy="10" r="4" fill="#00E5FF"/>
          <!-- head -->
          <g transform="translate(-20,-22)">
            <circle cx="0" cy="0" r="8" fill="#FFD7C2"/>
            <!-- eye blink -->
            <g transform="translate(-2,-1) scale(1,1)" style="transform-origin:-2px -1px; animation: blink 5.6s infinite ease-in-out;"></g>
            <circle cx="-2" cy="-1" r="1.4" fill="#111"/>
            <circle cx="3" cy="-1" r="1.4" fill="#111"/>
          </g>
          <!-- arms -->
          <g transform="translate(-8,2)">
            <rect x="-30" y="-2" width="14" height="4" rx="2" fill="#E6F7FF" transform="rotate(-8)" style="transform-origin:-16px 0px; animation: arm 2.8s ease-in-out infinite;"/>
          </g>
          <g transform="translate(-8,2)">
            <rect x="-6" y="-2" width="14" height="4" rx="2" fill="#E6F7FF" transform="rotate(8)" style="transform-origin:0px 0px; animation: arm 2.8s ease-in-out infinite reverse;"/>
          </g>
          <!-- legs -->
          <g transform="translate(-22,24)" style="transform-origin:-22px 24px; animation: legL 2.8s ease-in-out infinite;">
            <rect x="-4" y="0" width="8" height="18" rx="3" fill="#9EE3FF"/>
          </g>
          <g transform="translate(-10,24)" style="transform-origin:-10px 24px; animation: legR 2.8s ease-in-out infinite;">
            <rect x="-4" y="0" width="8" height="18" rx="3" fill="#9EE3FF"/>
          </g>
        </g>
      </g>
    </g>
  </g>

</svg>
